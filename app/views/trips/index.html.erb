<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-inverse">
    <tr>
      <th>Started At</th>
      <th>Ended At</th>
      <th>Duration</th>
      <th>Start Address</th>
      <th>End Address</th>
      <th>Distance (mi)</th>
      <th>Fuel Volume (gal)</th>
      <th>Fuel Cost</th>
    </tr>
  </thead>
  <tbody>
    <% @vehicle.trips.each do |trip| %>
      <tr>
        <td><%= trip.started_at.strftime("%m/%d/%y - %l:%M%P") %></td>
        <td><%= trip.ended_at.strftime("%m/%d/%y - %l:%M%P") %></td>
        <td><%= distance_of_time_in_words(trip.started_at, trip.ended_at) %></td>
        <td><%= trip.start_address["attributes"]["name"] %></td>
        <td><%= trip.end_address["attributes"]["name"] %></td>
        <td><%= trip.distance.round(2) %></td>
        <td><%= trip.fuel_volume.round(2) %></td>
        <td>$<%= trip.fuel_cost_usd %></td>
      </tr>
    <% end %>
  </tbody>
</table>
