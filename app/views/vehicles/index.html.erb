<% unless current_user %>
  <%= link_to image_tag("https://d1qbqqxx54sk5g.cloudfront.net/website/img/developer/buttons/signin-xlarge@2x.271d1595432a.png"), user_automatic_omniauth_authorize_path, class: "text-center" %>
<% end %>

<% if current_user %>

  <span><%= link_to "Add Vehicle", new_vehicle_path, class: "btn btn-primary btn-raised" %></span>
  <span class="float-right"><%= button_to "Import Data", import_data_path, class: "btn btn-primary btn-raised" %></span>

  <div class="col-xs-12">
    <table class="table table-striped table-bordered table-hover table-sm">
      <thead class="thead-inverse">
        <tr>
          <th></th>
          <th>Make</th>
          <th>Model</th>
          <th>Year</th>
          <th>Reservations</th>
          <th>Trips</th>
          <th>Tolls</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @vehicles.each do |vehicle| %>
          <tr>
            <td class="text-center"><%= link_to image_tag(vehicle.photo.url), vehicle_path(vehicle) %></td>
            <td><%= link_to vehicle.make, vehicle_path(vehicle) %></td>
            <td><%= link_to vehicle.model, vehicle_path(vehicle) %></td>
            <td><%= link_to vehicle.year, vehicle_path(vehicle) %></td>
            <td><%= link_to "View Reservations", vehicle_reservations_path(vehicle) %></td>
            <td><%= link_to "View Trips", vehicle_trips_path(vehicle) %></td>
            <td><%= link_to "View Tolls", vehicle_tolls_path(vehicle) %></td>
            <td class="text-center"><%= link_to "Edit", edit_vehicle_path(vehicle), class: "btn btn-primary btn-round" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>
