<div class="row" style="margin-top: 3em;">
  <% @monthly_breakdown.each do |month, breakdown| %>
    <div class="col-sm-4">
      <div class="card" style="margin-bottom: 2em;">
        <div class="card-block">
          <h4 class="card-title text-center"><%= month %></h4>
          <div class="card-text">
            <table class="table table-striped table-bordered table-hover table-sm">
              <thead class="thead-inverse">
                <tr>
                  <th>Earnings</th>
                  <th>Costs</th>
                  <th>Extras</th>
                  <th>Net</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= humanized_money_with_symbol(breakdown[:earnings]) %></td>
                  <td><%= humanized_money_with_symbol(@fixed_monthly_costs + breakdown[:expenses]) %></td>
                  <td><%= humanized_money_with_symbol(breakdown[:extras]) %></td>
                  <td><strong><%= humanized_money_with_symbol(breakdown[:earnings] + breakdown[:extras] - (@fixed_monthly_costs + breakdown[:expenses])) %></strong></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
